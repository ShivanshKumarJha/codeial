<header id="layout-header">
    <nav>
        <div class="mini-logo">
            <p>
                <a href="/">
                    <img class="logo-icon" src="/images/svg/logo.svg" alt="" width="140">
                </a>
            </p>
        </div>

        <div class="auth-links">
            <ul>
                <% if (locals.user) { %>
                    <div>
                        <li>
                            <a href="/posts/<%= user.id; %>">Posts</a>
                        </li>
                        <li>
                            <a href="/friends/all-friends/<%= locals.user.id %>">Friends</a>
                        </li>
                    </div>

                    <li>
                        <% if (user.avatar && user.avatar !== '/assets/images/png/default-avatar.png'){ %>
                            <img src='<%= user.avatar %>' alt='<%= user.name %>'
                                 class='profile-picture'>
                        <% } else{ %>
                            <img src='/images/png/default-avatar.png' alt='<%= user.name %>'
                                 class='profile-picture'>
                        <% } %>
                    </li>

                    <div>
                        <li>
                            <a href="/users/profile/<%= user.id; %>">
                                <%= user.name; %>
                            </a>
                        </li>
                        <li>
                            <a href="/users/sign-out">Sign Out</a>
                        </li>
                    </div>

                <% } else { %>
                    <li>
                        <a href="/users/sign-in">Sign In</a>
                    </li>
                    <li>
                        <a href="/users/sign-up">Sign Up</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </nav>
</header>
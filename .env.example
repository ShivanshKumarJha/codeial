# Environment
NODE_ENV=development
PORT=8000

# Database
CODEIAL_DB=mongodb://localhost:27017/codeial_development
# For production: CODEIAL_DB=mongodb+srv://username:password@cluster.mongodb.net/codeial

# Session
CODEIAL_SESSION_COOKIE_KEY=your-secret-key
SECRET=your-session-secret

# JWT
CODEIAL_JWT_SECRET=your-jwt-secret

# Google OAuth
CODEIAL_GOOGLE_CLIENT_ID=your-google-client-id
CODEIAL_GOOGLE_CLIENT_SECRET=your-google-client-secret
CODEIAL_GOOGLE_CALLBACK_URL=http://localhost:8000/users/auth/google/callback
# For production: CODEIAL_GOOGLE_CALLBACK_URL=https://your-domain.com/users/auth/google/callback

# Email Configuration
CODEIAL_GMAIL_USERNAME=your-gmail@gmail.com
CODEIAL_GMAIL_PASSWORD=your-app-password

# Logging
MORGAN_MODE=dev
# For production: MORGAN_MODE=combined

# Socket.IO
SOCKET_URL=http://localhost:8000
# For production: SOCKET_URL=https://your-domain.com

# Assets (for production)
CODEIAL_ASSET_PATH=./public/assets

# Environment flag
CODEIAL_ENVIRONMENT=development
# For production: CODEIAL_ENVIRONMENT=production
